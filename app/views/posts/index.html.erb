<div class="container">
  <header>
    <h1>ツイート一覧</h1>
  </header>

    <div class="main">
      <p class="content"><%= notice %></p>

      <table class="content">
        <tr>
          <th>内容</th>
        </tr>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.content %></td>
            <td><%= link_to '詳細を確認する', post_path(post.id), class: "link" %></td>
            <td><%= link_to "ツイートを編集する", edit_post_path(post.id), data: { confirm: '本当に編集してもいいですか?' }, class: "link" %></td>
            <td><%= link_to 'ツイートを削除する', post_path(post.id), method: :delete, data: { confirm: '本当に削除してもいいですか?' }, class: "link" %></td>
          </tr>
        <% end %>
      </table>

      <div class="new_button">
        <%= link_to '新しくつぶやく', new_post_path, class: "new_link" %>
      </div>
    </div>
        <footer class="footer">
          <p>kadai</p>
        </footer>
</div>
      

